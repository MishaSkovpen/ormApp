@model IEnumerable<ormApp.Models.Expense>

@{
    ViewData["Title"] = "Expenses";
}

<h2>Expenses</h2>

<table class="table">
    <thead>
        <tr>
            <th>Amount</th>
            <th>Date</th>
            <th>Category</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var expense in Model)
        {
            <tr>
                <td>@expense.Amount</td>
                <td>@expense.Date.ToShortDateString()</td>
                <td>@expense.CategoryId</td>
            </tr>
        }
    </tbody>
</table>
