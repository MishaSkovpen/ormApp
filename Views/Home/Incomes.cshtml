@model IEnumerable<ormApp.Models.Income>

@{
    ViewData["Title"] = "Incomes";
}

<!-- Посилання на ваш файл стилів -->
<link rel="stylesheet" href="~/css/styles.css" />

<div class="text-center">
    <h1 class="display-4">Incomes</h1>
    <p>Use the menu to navigate.</p>
</div>

<nav>
    <ul>
        <li><a href="/">Home</a></li>
        <li><a href="/Home/Users">Users</a></li>
        <li><a href="/Home/Incomes">Incomes</a></li>
        <li><a href="/Home/Expenses">Expenses</a></li>
    </ul>
</nav>

<table class="table">
    <thead>
        <tr>
            <th>Amount</th>
            <th>Date</th>
            <th>Source</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var income in Model)
        {
            <tr>
                <td>@income.Amount</td>
                <td>@income.Date.ToShortDateString()</td>
                <td>@income.Source</td>
            </tr>
        }
    </tbody>
</table>
