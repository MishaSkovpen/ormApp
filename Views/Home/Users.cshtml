@model IEnumerable<ormApp.Models.User>

@{
    ViewData["Title"] = "Users";
}

<!-- Посилання на ваш файл стилів -->
<link rel="stylesheet" href="~/css/styles.css" />

<div class="text-center">
    <h1 class="display-4">Users</h1>
    <p>Use the menu to navigate.</p>
</div>

<nav>
    <ul>
        <li><a href="/">Home</a></li>
        <li><a href="/Home/Users">Users</a></li>
        <li><a href="/Home/Incomes">Incomes</a></li>
        <li><a href="/Home/Expenses">Expenses</a></li>
    </ul>
</nav>

<table class="table">
    <thead>
        <tr>
            <th>Username</th>
            <th>Email</th>
            <th>First Name</th>
            <th>Last Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Username</td>
                <td>@user.Email</td>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
            </tr>
        }
    </tbody>
</table>

<nav>
    <ul>
        <li><a href="/">Home</a></li>
        <li><a href="/Users/Create">Create</a></li>
    </ul>
</nav>
