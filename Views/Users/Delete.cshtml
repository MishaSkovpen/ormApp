@model ormApp.Models.User

<h3>Are you sure you want to delete this user?</h3>
<hr />
<dl class="row">
    <dt class="col-sm-2">
        Username
    </dt>
    <dd class="col-sm-10">
        @Model.Username
    </dd>
    <dt class="col-sm-2">
        Email
    </dt>
    <dd class="col-sm-10">
        @Model.Email
    </dd>
    <dt class="col-sm-2">
        First Name
    </dt>
    <dd class="col-sm-10">
        @Model.FirstName
    </dd>
    <dt class="col-sm-2">
        Last Name
    </dt>
    <dd class="col-sm-10">
        @Model.LastName
    </dd>
    <dt class="col-sm-2">
        Address
    </dt>
    <dd class="col-sm-10">
        @Model.Address
    </dd>
</dl>

<form asp-action="DeleteConfirmed">
    <input type="hidden" asp-for="UserId" />
    <button type="submit" class="btn btn-danger">Delete</button> |
    <a asp-action="Index">Back to List</a>
</form>
